{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}


	<main class="container">
		<h1>Inscription</h1>
		<section class="container-lg">
			<div class="container-fluid mx-lg-auto d-flex justify-content-center">


				<div class="row g-3 mt-2 d-flex justify-content-center">
					{{ form_start(registrationForm) }}
					<div class="container">
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row(registrationForm.email) }}
							</div> 
							<div class="col-md-6 mb-3">
								{{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
							</div>
						</div>
					</div>
					<div class="container">
						<div class="row">
							<div class="col-md-3">
								{{ form_row(registrationForm.gender) }}
							</div>

							<div class="container">
								<div class="row gy-3">
									<div class="col-md-4">
										{{ form_row(registrationForm.firstname) }}

									</div>
									<div class="col-md-4">
										{{ form_row(registrationForm.lastname) }}
									</div>
									<div class="col-md-4">
										{{ form_row(registrationForm.phone_number) }}
									</div>

								</div>
								<div class="col-md-6">
									{{ form_row(registrationForm.birthdate) }}
								</div>
								<div class="col-md-3">
									{{ form_row(registrationForm.addresses) }}
								</div>
								<div class="col-md-3">
									{{ form_row(registrationForm.agreeTerms) }}
								</div>
					
								<div class="col-12">
									<button type="submit" class="btn btn-lg btn-primary">Register</button>
									{{ form_end(registrationForm) }}
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</section>
	</main>
{% endblock %}
