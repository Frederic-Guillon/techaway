{% extends 'admin/layout.back.office.html.twig' %}

{% block title %}Nouvelle catégorie
{% endblock %}

{% block body %}
{% block cards %}{% endblock %}


	<section class="container">
		<h1>Création d'une sous-categorie</h1>
		<section class="container-lg">
			<div class="container-fluid mx-lg-auto d-flex justify-content-center">
				<div class="row g-3 mt-2 d-flex justify-content-center">
					{{ form_start(form) }}
					<div class="mb-3">
						{{ form_row(form.name) }}
					</div>
					<div class="mb-3">
						{{ form_row(form.subtitle) }}
					</div>
					<div class="">
						{{ form_row(form.picture) }}
					</div>
					<div class="">
						{{ form_row(form.category, {
                                    label: 'Choisissez la catégorie la plus petite dans laquelle se trouvera cette nouvelle catégorie'
                                }) }}
					</div>
					<div class="">
						{{ form_row(form.products) }}
					</div>
					<div class="">
						<button type="submit" class="btn btn-lg btn-primary">Créer</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</section>
	</section>
{% endblock %}
