<main>
    <div class="container">
      <section style="background-color:white;" id="first part" class="mt-4">
        <div class="row mt-3" id="one">
          <div class=" d-flex justify-content-center col-xs-12 col-sm-12 col-md-12 col-lg-12" id="title_page">
            <h1 class="text-center">{{ product.name }}</h1>
          </div>
        </div>
        

        <div class="row mt-3" id="two">


        <div style="width:650px;" class="d-none d-md-block container-lg" id="carouselOfImagesHomePage">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></button>
            </div>
            <div class="carousel-inner container">
              <div class="carousel-item active row">
              {% if product.pictures[0].name is defined %}
                <img style="height:500px; " src="{{ asset('uploads/' ~  product.pictures[0].name) }}" class="ps-5 d-block" alt="...">
                {% else %}
                <img style="height:500px; " src="" class="d-block" alt="...">
                {% endif %}
              </div>
              <div class="carousel-item row">
              {% if product.pictures[1].name is defined %}
                <img style="height:500px; " src="{{ asset('uploads/' ~  product.pictures[1].name) }}" class="d-block" alt="...">
                {% elseif product.pictures[0].name is defined %}
                <img style="height:500px; " src="{{ asset('uploads/' ~  product.pictures[0].name) }}" class="d-block" alt="">
               {% else %}
                <img style="height:500px; " src="" class="d-block" alt="...">
                {% endif %}
              </div>
              <div class="carousel-item row">
              {% if product.pictures[2].name is defined %}
                <img style="height:500px; " src="{{ asset('uploads/' ~  product.pictures[2].name) }}" class="d-block" alt="...">
             {% elseif product.pictures[0].name is defined %}
                <img style="height:500px; " src="{{ asset('uploads/' ~  product.pictures[0].name) }}" class="d-block" alt="...">
              {% else %}
                <img style="height:500px; " src="" class="d-block" alt="...">
                {% endif %}
              </div>
            </div>
            <button class="carousel-control-prev " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon bg-secondary" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next " type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon bg-secondary" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        </div>

      <div class="container d-flex d-md-none">
        {% for picture in product.pictures %}
          <div class="row">
          
            <img class="col-sm" src="{{ asset('uploads/' ~  picture.name) }}" alt="">
            </div>

        {% endfor %}

      </div>

      </section>

