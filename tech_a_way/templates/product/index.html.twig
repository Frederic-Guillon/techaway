{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<main>
    <div class="container">
      <section id="first part" class="mt-4">
        <div class="row mt-3" id="one">
          <div class=" d-flex justify-content-center col-xs-12 col-sm-12 col-md-12 col-lg-12" id="title_page">
            <h1>{{ product.brand.name }} {{ product.name }}</h1>
          </div>
        </div>
        <div class="row mt-3" id="two">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="carousel_image">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
              {% for picture in product.pictures %}
                <div class="carousel-item active">
                  <img src="{{ asset('images/pc-portable-huawei-matebook-13-13-2k-core.jpg') }}" class="d-block w-100" alt="Image du produit {{ product.name }}">
                </div>
              {% endfor %}
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
        <div class="row mt-3" id="three">
          <div class="d-flex justify-content-center col-xs-12 col-sm-12 col-md-12 col-lg-12" id="title_product">
            <h2>{{ product.name }}</h2>
          </div>
        </div>
        <div class="row mt-3 flex-row-reverse" id="four">
          <div class="d-flex justify-content-center flex-column  col-xs-12 col-sm-12 col-md-6 col-lg-6" id="title_card">
            <h3 class="d-flex justify-content-center">Meilleur ordinateur</h3>
            <p class="d-flex justify-content-center">Laissez vous seduire par le dernier ordinateur à la mode {{ product.brand.name }}</p>
          </div>
          <div class="pt-2 d-flex justify-content-center col-xs-12 col-sm-12 col-md-6 col-lg-6" id="card_image">
            <div class="card" style="width: auto;">
              <img class="card-img-top " src="http://lorempixel.com/200/100/technics/1" alt="image ipad">
              <div class="card-body">
                <p class="card-text">
                  {{ product.description }}
                </p>
              </div>
            </div>

          </div>
        </div>
      </section>

      <section id="second part" class="mt-4">
        <div class="row mt-3" id="five">
          <div class="d-flex justify-content-center col-xs-12 col-sm-12 col-md-12 col-lg-12" id="title_describe">
            <h3 class="">
              <font style="vertical-align: inherit;">
                <font style="vertical-align: inherit;">
                  <h3>Bien plus qu'un ordinateur</h3>
                </font>
              </font>
            </h3>
          </div>
        </div>
        <div class="row mt-3" id="six">
          <div class="d-flex justify-content-center flex-column col-xs-12 col-sm-12 col-md-6 col-lg-6 "
            id="first_description">
            <h1>{{ product.brand.name }} {{ product.name }}</h1>

            <p>{{ product.description }}
            </p>
          </div>
          <div class="d-flex align-items-center col-xs-12 col-sm-12 col-md-6 col-lg-6" id="second_description">
            <dl>
              <dt><dfn>Prix TTC</dfn></dt>
              <dd>{{ product.inclTaxesPrice }}</dd>
            </dl>
          </div>
        </div>
        <div class="row mt-3" id="seven">
          <div class="mt-3 col-xs-12 col-sm-12 col-md-6 col-lg-6" id="card_cart">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">N'hésitez plus</h5>
                <p class="card-text">faites vous plaisir.</p>
                <a href=" {{path('cart_add', {id: product.id})}}" class="btn btn-primary">panier</a>
              </div>
            </div>
          </div>
          <div class="mt-3 col-xs-12 col-sm-12 col-md-6 col-lg-6" id="purchase_card">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Cadeau pour votre entourage</h5>
                <p class="card-text">Offrez aux personnes que vous aimez.</p>
                <a href=" {{path('cart_add', {id: product.id})}}" class="btn btn-primary">Acheter</a>
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-3" id="eight">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="detailed_information">
            <div class="accordion" id="accordionExample">
