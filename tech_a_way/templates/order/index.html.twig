{% extends 'base.html.twig' %}

{% block title %}Page de commande{% endblock %}

{% block body %}
    
<main>
        <section>
            <div class="container-fluid mt-4" id="delivery address selection">
                <div class="row" id="title_adress_selected">
                    <div class="col d-flex justify-content-center" style="border-bottom:1px solid #F25528 ">
                        <h1 class="">Sélectionner votre adresse de livraison</h1>
                    </div>
                </div>
            </div>
            <div class="container mt-3" id="selected_adress">
                <div class="row" id="selecte_adress_one">
                {% for address in app.user.addresses %}
                    <div class="col d-flex justify-content-md-center " >
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">Adresse De {{ address.type }} </h5>
                                <p class="card-text">    
                                <ul class="list-group list-group-flush">                         
                                    <li class="list-group-item">Nom : 
                                        <p class="font-italic">{{ app.user.lastname }}</p></li>
                                    <li class="list-group-item">Prénom : 
                                        <p class="font-italic">{{ app.user.firstname }}</p></li>
                                    <li class="list-group-item font-italic">Nom de Rue:
                                        <p class="font-italic">{{ address.street }}</p></li>
                                    <li class="list-group-item">ville :
                                        <p class="font-italic">{{ address.city }}</p> </li>
                                         <li class="list-group-item">Tel: :
                                        <p class="font-italic">{{ app.user.phoneNumber }}</p> </li>
                                    <li class="list-group-item">Pays :
                                        <p class="font-italic"> France</p></li>           
                                </ul>
                                </p>
                                <div class="ms-5 mb-4">
					<a href="{{ path('order_update_address', {'id':address.id}) }}" class="btn btn-primary">Editer</a>
					<a href="" class="btn btn-primary">Supprimer</a>
				</div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>

