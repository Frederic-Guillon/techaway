{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    
</style>

<div class="container">
    <div class="row">
    <div class="d-flex justify-content-center col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-2">
            <h2>Nouveau Produit</h2>
          </div>
    </div>
</div>

    <div class= "container">
        <div class="row">
        {% for newProduct in productsRecent %}
        <div class="col-xs-12 col-md-4">
            <div class="text card mb-4 shadow-sm">
              <img class="bd-placeholder-img card-img-top" width="100%" height="225"
                src="http://lorempixel.com/200/100/technics/2" preserveAspectRatio="xMidYMid slice" focusable="false"
                role="img" aria-label="Placeholder: Thumbnail">
              <title>{{newProduct.name}}</title>
              <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef"
                dy=".3em">{{newProduct.name}}</text>
              <div class="card-body">
                <p class="card-text">{{newProduct.description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">Voir</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Panier</button>
                  </div>
                  <small class="text-muted">Top</small>
                </div>
              </div>
            </div>
          </div>
         {% endfor %}
         </div>
        </div>
   


{% endblock %}
